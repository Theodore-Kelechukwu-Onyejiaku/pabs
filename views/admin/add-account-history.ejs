<%- include("../partials/admin/header") %>

    <!--/col-->

    <div class="col main pt-5 mt-3 bg-light">
        <div class="title">
            <h4 class="display-5 d-sm-block"> 
                ADD ACCOUNT HISTORY <i class="fa fa-user-plus"></i>
                <span class="text-success">
                    <% var message %>
                    <%= message %>
                </span>
            </h4>
        </div>

        <!-- add user form -->
        <div class="container user-form pt-4 mt-5 mb-5">

            
            <form class="addHistory" action="/admin/add-account-history" method="post">
              <div class="form-row">
                <div class="form-group col-md-4">
                  <label for="user_id">Account User</label>
                    <select name="user_id"  class="form-control" required>
                        <option value="">Select user...</option>
                            <% data.forEach(user =>{ %>
                                <option value="<%= user._id %>"><%= user.account_name %></option>
                            <% })%>
                                                                        
                    </select>
                </div>
                <div class="form-group col-md-4">
                    <label for="account_balance">Account Balance</label>
                  <input type="number" class="form-control" name="balance" id="account_balance" placeholder="Balance" required>
                </div>
                <div class="form-group col-md-4">
                    <label for="deposit">Account deposit </label>
                    <input type="number" name="deposit" class="form-control" id="deposit" placeholder="deposit">
                </div>
              </div>
              <div class="form-row">
                <div class="form-group col-md-4">
                    <label for="withdrawals">Withdrawal</label>
                    <input type="number" name="withdrawals" class="form-control" id="withdrawals"  placeholder="Withdrawal">
                </div>
                <div class="form-group col-md-4">
                  <label for="ref">Account Ref</label>
                  <input type="text" name="ref" class="form-control" id="ref" required placeholder="Account Ref">
                </div>
                <div class="form-group col-md-4">
                    <label for="date">Date</label>
                      <input type="date" class="form-control" name="dateTwo" id="date" required placeholder="Date">
                </div>
              </div>
              <div class="form-row">
                    <div class="form-group col-md-12">
                        <label for="">Description</label>
                    </div>
                  <textarea name="description" class="form-control" id="" cols="10" rows="5" placeholder="Description..." required></textarea>
              </div>
              <button type="submit" class="mt-3 btn btn-primary">Create</button>
            </form>
        </div>

    </div>
<!--/main col-->
</div>

</div>
<!--/.container-->
    
<%- include("../partials/admin/footer") %>
