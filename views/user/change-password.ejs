<%- include("../partials/user/header") %>

<!--/col-->

<div class="col main pt-5 mt-3 bg-light">
    <div class="title">
        <h4 class="display-5 d-sm-block"> 
            CHANGE ACCOUNT PASWORD
            <span class="text-success">
                <% var message %>
                <%= message %>
            </span>
        </h4>
    </div>

    <!-- dashboard boxes starts -->
      <div class="container">
          <div class="pass-change">
              <div class="card">
              <h5 class="card-header text-light text-uppercase" style="background-color:#023b7e;"><i class="fa fa-lock"></i> CHANGE PASSWORD</h5>
              <div class="card-body">
                   <form method="post" action="/customer/change-password" role="form" class="pass-form">
                    <input type="hidden" name="_id" value="<%= data._id %>">
                  <div class="form-group">
                    <label for="new_password">New Password</label>
                    <input type="password" class="form-control" id="new_password" placeholder="Enter New Password" name="new_password">
                  </div>

                  <div class="form-group">
                      <label for="conf_password">Confirm Password</label>
                    <input type="password" class="form-control" id="conf_password" placeholder="Confirm Password" name="conf_password">
                  </div>

                  <button type="submit" class="btn btn-primary">Change</button>
                </form>
                <br>
                                                      </div>
            </div>	
          </div>
      </div>

</div>
<!--/main col-->
</div>

</div>
<!--/.container-->

<%- include("../partials/user/footer") %>
